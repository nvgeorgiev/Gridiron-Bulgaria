@model IEnumerable<GridironBulgaria.Web.ViewModels.PhotoAlbums.PhotoAlbumsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Нов Албум</a>
</p>

<table>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ThumbnailPhotoUrl" alt="" height="200" width="300">
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.FacebookAlbumUrl)" target="_blank">@item.Title - @item.EventDate</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
