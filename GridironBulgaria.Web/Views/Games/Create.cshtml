@model GridironBulgaria.Web.ViewModels.Games.CreateGameViewModel

@{
    ViewData["Title"] = "Create";
}

<h3 class="font-weight-bold">Създаване на нов мач</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateAndStartTime" class="control-label"></label>
                <input asp-for="DateAndStartTime" class="form-control" />
                <span asp-validation-for="DateAndStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StadiumLocationUrl" class="control-label"></label>
                <input asp-for="StadiumLocationUrl" class="form-control" />
                <span asp-validation-for="StadiumLocationUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Format" class="control-label"></label>
                <input asp-for="Format" class="form-control" />
                <span asp-validation-for="Format" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamScore" class="control-label"></label>
                <input asp-for="HomeTeamScore" class="form-control" />
                <span asp-validation-for="HomeTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamScore" class="control-label"></label>
                <input asp-for="AwayTeamScore" class="form-control" />
                <span asp-validation-for="AwayTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamName" class="control-label"></label>
                <input asp-for="HomeTeamName" class="form-control" />
                <span asp-validation-for="HomeTeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamLogoUrl" class="control-label"></label>
                <input asp-for="HomeTeamLogoUrl" class="form-control" />
                <span asp-validation-for="HomeTeamLogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamName" class="control-label"></label>
                <input asp-for="AwayTeamName" class="form-control" />
                <span asp-validation-for="AwayTeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamLogoUrl" class="control-label"></label>
                <input asp-for="AwayTeamLogoUrl" class="form-control" />
                <span asp-validation-for="AwayTeamLogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ГОТОВО" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger" role="button">ИЗХОД БЕЗ ЗАПАЗВАНЕ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
