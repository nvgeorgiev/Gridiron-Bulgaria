@model GridironBulgaria.Web.ViewModels.Teams.TeamDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <main role="main" class="pb-3">
        <h2>
            <img src="@Html.DisplayFor(model => model.LogoUrl)" alt="" height="200" width="300">
            @Html.DisplayFor(model => model.Name)
        </h2>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CoverPhotoUrl)
                </dt>
                <dd class="col-sm-10">
                    <img src="@Html.DisplayFor(model => model.CoverPhotoUrl)" alt="" class="teamDetailsCoverPhoto">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CoachName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CoachName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TrainingsDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TrainingsDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ContactUrl)
                </dt>
                <dd class="col-sm-10">
                    <a href="@Html.DisplayFor(model => model.ContactUrl)" target="_blank">Свържи се с @Model.Name</a>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GamesPlayedCounter)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GamesPlayedCounter)
                </dd>
            </dl>
        </div>
        <h6>@Html.DisplayNameFor(model => model.TeamPhotoAlbums)</h6>
        <div>
            @foreach (var item in Model.TeamPhotoAlbums.Reverse())
            {
                <div>
                    <img src="@item.ThumbnailPhotoUrl" alt="" height="100" width="150">
                    <a href="@item.FacebookAlbumUrl" target="_blank">@item.Title - @item.EventDate</a>
                </div>
            }
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
            <a asp-controller="Games" asp-action="Index">Back to List</a>
        </div>
    </main>
</div>