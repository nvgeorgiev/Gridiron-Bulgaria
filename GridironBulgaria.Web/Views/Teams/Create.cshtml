@model GridironBulgaria.Web.ViewModels.Teams.CreateTeamInputModel

@{
    ViewData["Title"] = "Create";
}

<h2>Въвеждане на нов отбор</h2>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoUrl" class="control-label"></label>
                <input asp-for="LogoUrl" class="form-control" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverPhotoUrl" class="control-label"></label>
                <input asp-for="CoverPhotoUrl" class="form-control" />
                <span asp-validation-for="CoverPhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachName" class="control-label"></label>
                <input asp-for="CoachName" class="form-control" />
                <span asp-validation-for="CoachName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingsDescription" class="control-label"></label>
                <input asp-for="TrainingsDescription" class="form-control" />
                <span asp-validation-for="TrainingsDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactUrl" class="control-label"></label>
                <input asp-for="ContactUrl" class="form-control" />
                <span asp-validation-for="ContactUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TownName" class="control-label"></label>
                <input asp-for="TownName" class="form-control" />
                <span asp-validation-for="TownName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Готово" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно към Отборите</a>
</div>

